<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springboot.mapper.UserMapper" >

    <resultMap id="BaseResultMap" type="com.springboot.domain.User" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />

        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="create_by" property="createBy" jdbcType="VARCHAR" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="update_by" property="updateBy" jdbcType="VARCHAR" />
    </resultMap>

    <resultMap id="UserRoleResultMap" type="com.springboot.model.UserRoleDomain" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="create_by" property="createBy" jdbcType="VARCHAR" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="update_by" property="updateBy" jdbcType="VARCHAR" />
        <collection property="roleList" column="id" ofType="com.springboot.model.RolePerm"
                    select="com.springboot.mapper.RoleMapper.findByUserId" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, user_name, password, create_time, create_by, update_time, update_by
    </sql>

    <sql id="Column_List" >
        id, user_name, create_time, create_by, update_time, update_by
    </sql>

    <select id="findUserWithRoleById" parameterType="Long" resultMap="UserRoleResultMap">
        select <include refid="Column_List"/> from users where id = #{id}
    </select>

    <select id="findAllUsers" resultMap="UserRoleResultMap">
        select <include refid="Column_List"/> from users where enable = 'Y'
    </select>

</mapper>